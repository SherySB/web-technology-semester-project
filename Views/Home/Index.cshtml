@{
    ViewData["Title"] = "Home Page";
}

<style>
    .bar-small {
        width: 60px;
        height: 5px;
        background-color: #00A896;
        border-radius: 10px;
    }

    .bar-large {
        width: 200px;
        height: 1px;
        background-color: #00A896;
        opacity: 0.5;
    }

    .min-vh-70 {
        min-height: 70vh;
    }
</style>

<div class="d-flex align-items-center justify-content-center min-vh-70">
    <div class="text-center py-5">

        <div class="mx-auto mb-4 bar-small"></div>

        <h1 class="display-1 fw-bold mb-3 text-primary" style="letter-spacing: -1px;">
            Daily Task Manager
        </h1>

        <p class="fs-4 text-uppercase fw-light mb-0 text-dark" style="letter-spacing: 5px;">
            Simplify Your Productivity
        </p>

        <div class="mx-auto mt-4 bar-large"></div>

    </div>
</div>
