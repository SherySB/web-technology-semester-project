@model dynamic

@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mt-4">

    <h3 class="mb-4 text-center">Admin Dashboard</h3>

    <div class="row g-4">

        <div class="col-md-6">
            <div class="card shadow-sm border-primary h-100">
                <div class="card-body d-flex flex-column justify-content-between">

                    <div>
                        <h5 class="card-title text-primary">Total Users</h5>
                        <p class="display-6 fw-bold">@Model.TotalUsers</p>
                    </div>

                    <a class="btn btn-primary mt-3 align-self-start"
                       asp-controller="Admin"
                       asp-action="ManageUsers">
                        Manage Users
                    </a>

                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow-sm border-success h-100">
                <div class="card-body d-flex flex-column justify-content-between">

                    <div>
                        <h5 class="card-title text-success">Total Tasks</h5>
                        <p class="display-6 fw-bold">@Model.TotalTasks</p>
                    </div>

                    <a class="btn btn-success mt-3 align-self-start"
                       asp-controller="Admin"
                       asp-action="AllTasks">
                        View All Tasks
                    </a>

                </div>
            </div>
        </div>

    </div>
</div>
