@model IEnumerable<Daily_Task_Manager.Models.Data_Models.ApplicationUser>

@{
    ViewData["Title"] = "Manage Users";
}

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="mb-0">Manage Users</h3>

        <a class="btn btn-secondary"
           asp-controller="Admin"
           asp-action="AdminDashboard">
            ← Back to Dashboard
        </a>
    </div>

    <div class="mb-3">
        <vc:task-count></vc:task-count>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">

            <table class="table table-bordered table-striped mb-0">
                <thead class="table-dark">
                    <tr>
                        <th style="width:30%">User ID</th>
                        <th style="width:40%">Username / Email</th>
                        <th style="width:30%" class="text-center">Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td class="text-break">@user.Id</td>
                                <td>
                                    @(string.IsNullOrEmpty(user.UserName) ? user.Email  : user.UserName)
                                </td>
                        <td class="text-center">
                            <a class="btn btn-sm btn-info text-white"
                               asp-controller="Admin"
                               asp-action="UserTasks"
                               asp-route-id="@user.Id">
                                View Tasks
                            </a>
                        </td>
                    </tr>
                                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="3" class="text-center text-muted py-4">
                                No users found.
                            </td>
                        </tr>
                    }
                </tbody>

            </table>

        </div>
    </div>
</div>
