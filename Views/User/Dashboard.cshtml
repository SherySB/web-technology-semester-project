@model IEnumerable<Daily_Task_Manager.Models.Data_Models.UserTask>

@{
    ViewData["Title"] = "User Dashboard";
}

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="mb-0">Your Tasks</h3>

        <a class="btn btn-success"
           asp-controller="Task"
           asp-action="Create">
            + Add New Task
        </a>
    </div>

    <div class="mb-3">
        <vc:task-count user-id="@ViewBag.userid"></vc:task-count>
    </div>

    <div id="taskTableContainer" class="card shadow-sm">
        <div class="card-body p-0">
            <partial name="_UserTaskTable" model="Model" />
        </div>
    </div>

</div>
